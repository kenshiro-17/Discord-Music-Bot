{
  "name": "tc-discord-bot",
  "version": "1.0.0",
  "description": "Production-ready Discord music bot with YouTube, Spotify, and file upload support",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "deploy:commands": "ts-node src/scripts/deployCommands.ts",
    "docker:build": "docker build -t lyra-bot .",
    "docker:run": "docker-compose up -d",
    "pm2:start": "pm2 start ecosystem.config.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testMatch='**/tests/integration/**/*.test.ts'"
  },
  "keywords": [
    "discord",
    "bot",
    "music",
    "youtube",
    "spotify"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@discordjs/voice": "^0.16.1",
    "@sentry/node": "^7.91.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "ffmpeg-static": "^5.2.0",
    "libsodium-wrappers": "^0.8.1",
    "opusscript": "^0.0.8",
    "play-dl": "^1.9.7",
    "typescript": "^5.3.3",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
